<h3>Nova postagem:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="nome">Titulo: </label>
                <input type="text" name="titulo" placeholder="Titulo da postagem" class="form-control" required>
            <label for="slug" class=" mt-4">Slug: </label>
                <input type="text"  name="slug" placeholder="Slug da categoria" class="form-control"  required>
            <label for="slug" class=" mt-4">Descricao: </label>
                <input type="text"  name="descricao" placeholder="Descricao da categoria" class="form-control"  required>
            <label for="slug" class=" mt-4">Conteudo: </label>
                <textarea  name="conteudo" placeholder="Conteudo da categoria" class="form-control"  required></textarea>
            <label for="categoria" class="mt-4">Categoria: </label>
                <select name="categoria" class="form-select"  required>
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
            <button type="submit" class="btn btn-success mt-4">Criar Postagem</button>
        </form>
    </div>
</div>