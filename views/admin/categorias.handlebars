<h2>Categorias</h2>
<hr>
<a href="/admin/categorias/add">
    <button type="button" class="btn btn-success">Nova Categoria</button>
</a>
{{#each categorias}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small class="text-secondary">{{slug}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-2">editar</button></a>
        </div>
    </div>
{{else}}

{{/each}}  